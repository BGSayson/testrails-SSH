<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Body</th>
      <th><%= link_to 'New_Article', new_article_path %></th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %> </td>
      <td><%= article.name %> </td>
      <td><%= article.body %> </td>
      <td><%= link_to 'Show', article_path(article.id) %> </td>
      <td><%= link_to 'Edit', edit_article_path(article.id) %> </td>
      <td><%= button_to 'Delete', delete_article_path(article.id), data:{ turbo_method: :delete, turbo_confirm: 'Are you sure?' }, method: :delete %> </td>
    </tr>
    <% end %>
  </tbody>
</table>
